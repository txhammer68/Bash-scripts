#!/bin/bash
clear
echo "Digi-Boxx" | sed  -e :a -e "s/^.\{1,$(tput cols)\}$/ & /;ta" | tr -d '\n' | head -c $(tput cols)
echo "System Commands" | sed  -e :a -e "s/^.\{1,$(tput cols)\}$/ & /;ta" | tr -d '\n' | head -c $(tput cols)
echo "=============================" | sed  -e :a -e "s/^.\{1,$(tput cols)\}$/ & /;ta" | tr -d '\n' | head -c $(tput cols)
echo ""
echo "Restart Network"
echo "    sudo systemctl restart NetworkManager.service"
echo ""
echo "Analyze Boot up Process"
echo "    sudo systemd-analyze verify"
echo "    systemd-analyze blame"
echo "    systemd-analyze critical-chain"
echo "    systemd-analyze --user blame"
echo ""
echo "Rebuild initramfs image"
echo "    sudo update-initramfs -u"
echo ""
echo "Add user to group"
echo "    sudo usermod -a -G cdrom matt"
echo ""
echo "Test Screenlocker"
echo "    /usr/lib/x86=64-linux-gnu/libexec/kscreenlocker=greet --testing"
echo ""
echo "Test SDDM login screen"
echo "    sddm-greeter --test-mode"
echo "    sudo loginctl unlock-sessions"
echo ""
echo "System Log"
echo "    journalctl --since today"
echo "Permissions"
echo "Change owner and group of file"
echo "     chown [owner]:[group] -c [file] "
echo "Change file permissions "
echo "      chmod [permissions] -c [file]"
